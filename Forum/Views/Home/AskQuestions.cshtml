            <button type="button" class="glyphicon glyphicon-pencil btn btn-warning" style="float:right; margin:2px"></button>
            <button type="button" class="glyphicon glyphicon-trash btn btn-danger" style="float:right; margin:2px;"></button>
        </div>*@
    <div id="questionList">
    </div>
</div>

<div class="row">
</div>

<style type="text/css">
    .question {
        background-color: #e9dcdc;
        min-height: 50px;
        min-width: 100%;
        max-height: 50%;
        border: 1px solid black;
        padding: 14px;
        margin: 2px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        overflow-x: scroll hidden;
    }

    .d-none {
        display: none;
    }

    .d-block {
        display: block;
    }
</style>