
@{
    ViewBag.Title = "AskQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/AppScript/PostQuestion.js"></script>
<link href="~/fonts/glyphicons/glyphicons.css" rel="stylesheet" />
<h2>Ask a Questions</h2>
<div class="col-sm-12">

    <input type="hidden" id="hiddenEditID" />
    <label>Question  *:</label>
    <input type="text" id="question" class="form-control clear" />

    <label>Discription:</label>
    <textarea rows="5" cols="6" class="form-control clear" id="discription"></textarea>
    <br />
    <button type="button" class="btn btn-sm btn-primary" id="postQuestion">Post</button>
    <button type="button" class="btn btn-sm btn-primary d-none" id="updateQuestion">Update</button>
    <button type="button" class="btn btn-sm btn-default btn-sm d-none" id="cancelButton">Cancel</button>
